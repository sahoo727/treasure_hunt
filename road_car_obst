import pygame  
import math
import random
#intaliing the pygame
pygame.init()

screen = pygame.display.set_mode((800,600))  #creating screen

#background
bgimg = pygame.image.load('space.jpg')


#1. title & icon
pygame.display.set_caption("Space Invader")
icon = pygame.image.load('ufo.png')
pygame.display.set_icon(icon)

#2.playrimg
playerimg = pygame.image.load('spaceship.png')
spaceshipX=370
spaceshipY=480
X_change = 0
Y_change = 0

#enemy
enemyimg = []
enemyX = []
enemyY = []
enX_change = []
no_enemy = 6
for i in range(no_enemy):
    enemyimg.append(pygame.image.load('enemy.png'))
    enemyX.append(random.randint(0,736))
    enemyY.append(random.randint(50,100))
    enX_change.append(0.3)
    #enY_change = 20

#bullet
#ready - bullet cant be see on the screen
#fire - bullet moves
bulletimg = pygame.image.load('bullet.png')
bulletX = 0
bulletY = 480
bulletX_change = 0
bulletY_change = 1
global bullet_state
bullet_state = 'ready'

#score
score_value = 0
font = pygame.font.Font('freesansbold.ttf',30)
textX = 10
textY = 10

def show_score(x,y):
    score = font.render('score :'+ str(score_value),True,(255,255,255))
    screen.blit(score,(x,y))

def player(x,y):
    screen.blit(playerimg , (x,y))

def enemy(x,y,i):
    screen.blit(enemyimg[i] , (x,y))

def fire_bullet(x,y):
    global bullet_state
    bullet_state = 'fire'
    screen.blit(bulletimg , (x+16,y+10))

def isCollision(enemyX,enemyY,bulletX,bulletY):
    dist = math.sqrt((math.pow(enemyX-bulletX,2)) + (math.pow(enemyY-bulletY,2)))
    if dist < 27:
        return True
    else:
        return False

#game loop
running = True
while running :
    #rgb
    #screen.fill((0,0,0)) 

    screen.blit(bgimg,(0,0))

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running =False

        #3.keypress
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_LEFT:
                X_change = -0.5
            if event.key == pygame.K_RIGHT:
                X_change = 0.5
            if event.key == pygame.K_SPACE:
                if bullet_state is 'ready':
                    bulletX = spaceshipX
                    #print('bbbbbbb',bulletX)
                    fire_bullet(bulletX,bulletY)

            '''  
            if event.key == pygame.K_UP:
                Y_change = -0.5
            if event.key == pygame.K_DOWN:
                Y_change = 0.5
            '''
        if event.type == pygame.KEYUP:
            if event.key == pygame.K_LEFT or event.key == pygame.K_RIGHT:
                X_change = 0 
            '''
            if event.key == pygame.K_UP or event.key == pygame.K_DOWN:
                Y_change = 0 
            '''


    #print('s',spaceshipX)
    #sprint()
    spaceshipX += X_change
    #spaceshipY += Y_change

    if spaceshipX < 0:
        spaceshipX = 0
    elif spaceshipX > 736:
        spaceshipX = 736
    '''
    elif spaceshipY <= 0:
        spaceshipY = 0
    elif spaceshipY >= 530:
        spaceshipY = 530
    '''

    for i in range(no_enemy):
        enemyX[i] += enX_change[i]
        #spaceshipY += Y_change

        if enemyX[i] <= 0:
            enX_change[i] = 0.3
            #enemyY += enY_change
        elif enemyX[i] >= 736:
            enX_change[i] = -0.3  
            #enemyY += enY_change

        collision = isCollision(enemyX[i],enemyY[i],bulletX,bulletY)
        if collision:
            bulletY = 480
            bullet_state = 'ready'
            score_value += 1
            enemyX[i] = random.randint(0,736)
            enemyY[i] = random.randint(50,130)


        enemy(enemyX[i],enemyY[i],i)


    #bullet maovement
    if bulletY <= 0:
        bulletX = 0
        bulletY = 480
        bullet_state = 'ready'
    if bullet_state is 'fire':
        fire_bullet(bulletX,bulletY)
        bulletY -= bulletY_change

    

    player(spaceshipX,spaceshipY)
    show_score(textX,textY)
    pygame.display.update()










































